<Window x:Class="WPFCore.AsynchronousOperations.AsynchronousStreams.FileLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCore.AsynchronousOperations.AsynchronousStreams"
        mc:Ignorable="d"
        Title="FileLoadWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="80">

            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="LoadButton" Grid.Row="0" Content="Load Content" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoadButton_Click"/>
        <DataGrid x:Name="ContentGrid" Grid.Row="1"/>
    </Grid>
</Window>
